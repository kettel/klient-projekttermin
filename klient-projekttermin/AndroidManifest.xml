<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.klien_projekttermin"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- User permissions -->
    <user-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Features -->
    <uses-feature android:name="android.hardware.camera" />

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/loggakrona"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="map.MapActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_map" >
        </activity>
        <activity
            android:name="messageFunction.CreateMessage"
            android:label="title_activity_create_new_message" >
        </activity>
        <activity
            android:name="messageFunction.Inbox"
            android:label="@string/inbox" >
        </activity>
        <activity
            android:name="messageFunction.DisplayOfConversation"
            android:label="DisplayOfConversation" >
        </activity>
        <activity
            android:name="camera.Camera"
            android:label="Camera" >
        </activity>
        <activity
            android:name="logger.LogViewer"
            android:label="@string/title_activity_log_viewer" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.klien_projekttermin.MainActivity" />
        </activity>
        <activity
            android:name="messageFunction.DisplayMessage"
            android:label="display" >
        </activity>
        <activity android:name="assignment.AssignmentOverview" >
        </activity>
        <activity
            android:name="assignment.AssignmentDetails"
            android:label="@string/uppdrag" >
        </activity>
        <activity
            android:name="loginFunction.LogInFunction"
            android:label="@string/title_activity_log_in_function" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Database Content Providers -->
      	<provider
            android:name="com.example.klien_projekttermin.database.ContactsContentProvider" 
            android:authorities="com.example.klien_projekttermin.database.ContactsContentProvider" />
   		<provider
            android:name="com.example.klien_projekttermin.database.AssignmentsContentProvider" 
            android:authorities="com.example.klien_projekttermin.database.AssignmentsContentProvider" />
   		<provider
            android:name="com.example.klien_projekttermin.database.MessagesContentProvider" 
            android:authorities="com.example.klien_projekttermin.database.MessagesContentProvider" />
   		<provider
            android:name="com.example.klien_projekttermin.database.AuthenticationContentProvider" 
            android:authorities="com.example.klien_projekttermin.database.AuthenticationContentProvider" />
        <!-- Communication Module Service -->
        <service android:name="communicationModule.CommunicationService" >
        </service>

    </application>

</manifest>
